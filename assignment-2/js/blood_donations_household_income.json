{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 600,
    "data": {
        "url": "https://raw.githubusercontent.com/joshua-ethan-yap/FIT3179/refs/heads/main/assignment-2/data/population_donations_income_by_state.csv"
    },
    "params": [
        {
            "name": "selectedYear",
            "value": 2022
        }
    ],
    "transform": [
        {
            "calculate": "datum.donations / datum.population * 10000",
            "as": "donations_per_10k"
        },
        {
          "filter": "datum.year == selectedYear"
        }
    ],
    "encoding": {
        "x": {
            "field": "income_median",
            "type": "quantitative",
            "title": "Median Household Income (RM)",
            "axis": {
                "tickCount": 5
            }
        },
        "y": {
            "field": "donations_per_10k",
            "type": "quantitative",
            "title": "Blood Donations per 10 000 Population",
            "axis": {
                "tickCount": 5
            }
        },
        "tooltip": [
            {
                "field": "state",
                "type": "nominal",
                "title": "State"
            },
            {
                "field": "income_median",
                "type": "quantitative",
                "title": "Median Household Income (RM)"
            },
            {
                "field": "donations_per_10k",
                "type": "quantitative",
                "title": "Blood Donations per 10 000 Population",
                "format": ".2f"
            }
        ]
    },
    "layer": [
        {
            "mark": "circle",
            "encoding": {
                "size": {
                    "field": "population",
                    "type": "quantitative",
                    "title": "Population Size",
                    "scale": {
                        "domain": [
                            0,
                            10000000
                        ],
                        "range": [
                            100,
                            1000
                        ],
                        "zero": false
                    },
                    "legend": {
                        "format": ".1s"
                    }
                },
                "color": {
                    "field": "state",
                    "type": "nominal",
                    "legend": null
                },
                "opacity": {
                    "value": 0.6
                }
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "left",
                "baseline": "middle",
                "dx": {
                    "expr": "datum.state == 'Pahang' ? -50 : (datum.state == 'W.P. Kuala Lumpur' ? -105 : (datum.state == 'Selangor' ? -60 : (datum.state == 'W.P. Putrajaya' ? -80 : 10)))"
                }
            },
            "encoding": {
                "text": {
                    "field": "state",
                    "type": "nominal"
                },
                "color": {
                    "value": "black"
                }
            }
        }
    ]
}