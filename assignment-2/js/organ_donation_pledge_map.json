{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 400,
    "projection": {
        "type": "equirectangular"
    },
    "params": [
        {
            "name": "selectedYear",
            "value": 2022
        }
    ],
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/joshua-ethan-yap/FIT3179/refs/heads/main/assignment-2/data/total_organ_pledges_and_population.csv"
            },
            "transform": [
                {
                    "lookup": "state",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/joshua-ethan-yap/FIT3179/refs/heads/main/assignment-2/js/ne_1.json",
                            "format": {
                                "type": "topojson",
                                "feature": "ne_10m_admin_1_states_provinces"
                            }
                        },
                        "key": "properties.name"
                    },
                    "as": "geo"
                },
                {
                    "filter": "datum.year == selectedYear"
                },
                {
                    "calculate": "datum.pledges / datum.population * 10000",
                    "as": "pledges_per_10k"
                }
            ],
            "layer": [
                {
                    "mark": {
                        "type": "geoshape",
                        "stroke": "black",
                        "strokeWidth": 0.5
                    },
                    "encoding": {
                        "shape": {
                            "field": "geo",
                            "type": "geojson"
                        },
                        "color": {
                            "field": "pledges_per_10k",
                            "type": "quantitative",
                            "scale": {
                                "type": "threshold",
                                "domain": [
                                    7,
                                    14,
                                    21,
                                    28
                                ],
                                "range": [
                                    "#fee5d9",
                                    "#fcae91",
                                    "#fb6a4a",
                                    "#de2d26",
                                    "#a50f15"
                                ]
                            },
                            "title": [
                                "Pledges per",
                                "10k Population"
                            ]
                        },
                        "tooltip": [
                            {
                                "field": "state",
                                "type": "nominal",
                                "title": "State"
                            },
                            {
                                "field": "pledges",
                                "type": "quantitative",
                                "title": "Total Organ Pledges"
                            },
                            {
                                "field": "population",
                                "type": "quantitative",
                                "title": "Population (people)"
                            },
                            {
                                "field": "pledges_per_10k",
                                "type": "quantitative",
                                "title": "Pledges per 10k Population",
                                "format": ".2f"
                            }
                        ]
                    }
                },
                {
                    "data": {
                        "url": "https://raw.githubusercontent.com/joshua-ethan-yap/FIT3179/refs/heads/main/week9-homework/js/ne_1.json",
                        "format": {
                            "type": "topojson",
                            "feature": "ne_110m_graticules_1"
                        }
                    },
                    "mark": {
                        "type": "geoshape",
                        "stroke": "lightgray",
                        "strokeWidth": 0.5
                    }
                }
            ]
        }
    ]
}