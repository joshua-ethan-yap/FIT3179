{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 400,
    "projection": {
        "type": "equirectangular"
    },
    "params": [
        {
            "name": "selectedYear",
            "value": 2023
        }
    ],
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/joshua-ethan-yap/FIT3179/refs/heads/main/assignment-2/js/ne_1.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_10m_admin_1_states_provinces"
                }
            },
            "transform": [
                {
                    "calculate": "'Data is not available in ' + datum.properties.name",
                    "as": "note"
                }
            ],
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "black"
            },
            "encoding": {
                "tooltip": {
                    "field": "note"
                }
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/joshua-ethan-yap/FIT3179/refs/heads/main/assignment-2/data/population_donations_income_by_state.csv"
            },
            "transform": [
                {
                    "lookup": "state",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/joshua-ethan-yap/FIT3179/refs/heads/main/assignment-2/js/ne_1.json",
                            "format": {
                                "type": "topojson",
                                "feature": "ne_10m_admin_1_states_provinces"
                            }
                        },
                        "key": "properties.name"
                    },
                    "as": "geo"
                },
                {
                    "filter": "datum.year == selectedYear"
                },
                {
                    "calculate": "datum.donations / datum.population * 10000",
                    "as": "donations_per_10k"
                }
            ],
            "layer": [
                {
                    "mark": {
                        "type": "geoshape",
                        "stroke": "black",
                        "strokeWidth": 0.5
                    },
                    "encoding": {
                        "shape": {
                            "field": "geo",
                            "type": "geojson"
                        },
                        "color": {
                            "field": "donations_per_10k",
                            "type": "quantitative",
                            "scale": {
                                "type": "threshold",
                                "domain": [
                                    50,
                                    100,
                                    150,
                                    200
                                ],
                                "range": [
                                    "#fee5d9",
                                    "#fcae91",
                                    "#fb6a4a",
                                    "#de2d26",
                                    "#a50f15"
                                ]
                            },
                            "title": [
                                "Blood donations per",
                                "10k population"
                            ],
                            "legend": {
                                "orient": "bottom-right",
                                "direction": "horizontal",
                                "fillColor": "white",
                                "padding": 3,
                                "title": "Donations per 10k Population",
                                "values": [
                                    0,
                                    50,
                                    100,
                                    150,
                                    200
                                ]
                            }
                        },
                        "tooltip": [
                            {
                                "field": "state",
                                "type": "nominal",
                                "title": "State"
                            },
                            {
                                "field": "donations",
                                "type": "quantitative",
                                "title": "Total Blood Donations"
                            },
                            {
                                "field": "population",
                                "type": "quantitative",
                                "title": "Population (people)"
                            },
                            {
                                "field": "donations_per_10k",
                                "type": "quantitative",
                                "title": "Blood Donations per 10k Population",
                                "format": ".2f"
                            }
                        ]
                    }
                },
                {
                    "data": {
                        "url": "https://raw.githubusercontent.com/joshua-ethan-yap/FIT3179/refs/heads/main/week9-homework/js/ne_1.json",
                        "format": {
                            "type": "topojson",
                            "feature": "ne_110m_graticules_1"
                        }
                    },
                    "mark": {
                        "type": "geoshape",
                        "stroke": "lightgray",
                        "strokeWidth": 0.5
                    }
                }
            ]
        }
    ]
}