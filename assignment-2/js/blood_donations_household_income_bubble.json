{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 600,
    "data": {
        "url": "https://raw.githubusercontent.com/joshua-ethan-yap/FIT3179/refs/heads/main/assignment-2/data/population_donations_income_by_state.csv"
    },
    "params": [
        {
            "name": "selectedYear",
            "value": 2022
        },
        {
            "name": "incomeSelection",
            "value": "income_median",
            "bind": {
                "input": "select",
                "options": [
                    "income_median",
                    "income_mean"
                ],
                "labels": [
                    "Median Income",
                    "Mean Income"
                ],
                "name": "Select Income Type: "
            }
        }
    ],
    "transform": [
        {
            "calculate": "incomeSelection == 'income_median' ? datum.income_median : datum.income_mean",
            "as": "selected_income"
        },
        {
            "calculate": "datum.donations / datum.population * 10000",
            "as": "donations_per_10k"
        },
        {
            "filter": "datum.year == selectedYear"
        }
    ],
    "encoding": {
        "x": {
            "field": "selected_income",
            "type": "quantitative",
            "title": "Median/Mean Household Income (RM)",
            "axis": {
                "tickCount": 5
            }
        },
        "y": {
            "field": "donations_per_10k",
            "type": "quantitative",
            "title": "Blood Donations per 10 000 Population",
            "axis": {
                "tickCount": 5
            }
        },
        "tooltip": [
            {
                "field": "state",
                "type": "nominal",
                "title": "State"
            },
            {
                "field": "income_median",
                "type": "quantitative",
                "title": "Median/Mean Household Income (RM)"
            },
            {
                "field": "donations_per_10k",
                "type": "quantitative",
                "title": "Blood Donations per 10 000 Population",
                "format": ".2f"
            },
            {
                "field": "population",
                "type": "quantitative",
                "title": "Population (people)"
            }
        ]
    },
    "layer": [
        {
            "mark": "circle",
            "encoding": {
                "size": {
                    "field": "population",
                    "type": "quantitative",
                    "title": "Population",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            1000000,
                            2000000,
                            3000000,
                            4000000,
                            5000000
                        ],
                        "range": [
                            50,
                            100,
                            250,
                            400,
                            600,
                            900
                        ]
                    },
                    "legend": {
                        "format": ".1s"
                    }
                },
                "color": {
                    "field": "state",
                    "type": "nominal",
                    "legend": null
                },
                "opacity": {
                    "value": 0.6
                }
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "left",
                "baseline": "middle",
                "dx": {
                    "expr": "datum.state == 'Pahang' ? -50 : (datum.state == 'W.P. Kuala Lumpur' ? -105 : (datum.state == 'Selangor' ? -60 : (datum.state == 'W.P. Putrajaya' ? -80 : 10)))"
                },
                "dy": -7
            },
            "encoding": {
                "text": {
                    "field": "state",
                    "type": "nominal",
                    "condition": {
                        "test": "datum.state == 'Perak' || datum.state == 'Pahang' || datum.state == 'Kedah' || datum.state == 'Negeri Sembilan' || datum.state == 'Terengganu' || datum.state == 'Kelantan'",
                        "value": ""
                    }
                },
                "color": {
                    "value": "black"
                }
            }
        }
    ]
}